@model PhotoSharingApplication.Models.Photo

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Display</title>
</head>
<body>
    <fieldset>
        <legend>Photo</legend>
    
        <div class="display-label">
             @Html.DisplayNameFor(model => model.Title)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Title)
        </div>

        @if (Model.PhotoFile != null)
        {
            <img style="width: 800px" src="@Url.Action("GetImage", "Photo", new { id = Model.PhotoId })" />
        }
    
        <div class="display-label">
             @Html.DisplayNameFor(model => model.ImageMimeType)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.ImageMimeType)
        </div>
    
        <div class="display-label">
             @Html.DisplayNameFor(model => model.Description)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Description)
        </div>
    
        <div class="display-label">
             @Html.DisplayNameFor(model => model.CreateDate)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.CreateDate)
        </div>
    
        <div class="display-label">
             @Html.DisplayNameFor(model => model.UserName)
        </div>
        <div class="display-field">
            @Html.DisplayFor(model => model.UserName)
        </div>
    </fieldset>
    <p>
        @Html.ActionLink("Edit", "Edit", new { id=Model.PhotoId }) |
        @Html.ActionLink("Back to List", "Index")
    </p>
</body>
</html>
